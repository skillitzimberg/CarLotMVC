@using Dealership.Models;

<!DOCTYPE html>
<html>
    <head>
        <title>Dealership</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <h1>Dealership Inventory</h1>
            <ul>
              @if (Model.Count == 0)
              {
                <p>You have no cars in your to inventory!</p>
              }
              @if(Model.Count != 0)
              {
                @foreach (Car car in Model)
                {
                    <li>@item.GetDescription()</li>
                }
              }

            </ul>
            <a href="/cars/new">Add a new car</a>
        </div>
    </body>
</html>
